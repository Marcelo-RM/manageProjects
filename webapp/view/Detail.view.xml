<mvc:View controllerName="manageprojects.manageprojects.controller.Detail" xmlns="sap.m" xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc" xmlns:dnd="sap.ui.core.dnd">
	<semantic:SemanticPage id="detailPage" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title id="titleDetail" text="" level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent></semantic:headerContent>
		<semantic:content>
			<!--<List items="{
				path: 'detailView>/atividades'
			}">
				<ObjectListItem  title="{detailView>descricao}" 
					>
					<ObjectAttribute title="{i18n>responsavel}" 
						text="{path: 'detailView>idDev', formatter: '.formatter.getDev'}"></ObjectAttribute>
					<firstStatus>
						<ObjectStatus title="{i18n>status}" 
							text="{path: 'detailView>status', formatter: '.formatter.formatStatusText'}"
							state="{path: 'detailView>status', formatter: '.formatter.formatStatusColor'}"></ObjectStatus>
					</firstStatus>
				</ObjectListItem>
			</List>-->
			<HBox alignContent="Stretch">
				<!-- NÃO INICIADOS -->
				<List items="{ path: 'detailView>/atividades', filters : [ { path : 'status', operator : 'EQ', value1 : 'C'} ] }" headerText="Não iniciados"
					width="99%" noDataText="Vazio">
					<ObjectListItem title="{detailView>descricao}">
						<ObjectAttribute text="{path: 'detailView>idDev', formatter: '.formatter.getDev'}"></ObjectAttribute>
						<firstStatus>
							<ObjectStatus text="{path: 'detailView>status', formatter: '.formatter.formatStatusText'}"
								state="{path: 'detailView>status', formatter: '.formatter.formatStatusColor'}"></ObjectStatus>
						</firstStatus>
					</ObjectListItem>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
					<dragDropConfig>
						<dnd:DragDropInfo sourceAggregation="items" 
							targetAggregation="items" 
							dropPosition="Between" 
							drop=".onReorderItems"/>
					</dragDropConfig>
				</List>
				
				<!-- EM ANDAMENTO -->
				<List items="{ path: 'detailView>/atividades', filters : [ { path : 'status', operator : 'EQ', value1 : 'B'} ] }" headerText="Em andamento"
					width="99%" noDataText="Vazio">
					<ObjectListItem title="{detailView>descricao}">
						<ObjectAttribute text="{path: 'detailView>idDev', formatter: '.formatter.getDev'}"></ObjectAttribute>
						<firstStatus>
							<ObjectStatus text="{path: 'detailView>status', formatter: '.formatter.formatStatusText'}"
								state="{path: 'detailView>status', formatter: '.formatter.formatStatusColor'}"></ObjectStatus>
						</firstStatus>
					</ObjectListItem>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
					<dragDropConfig>
						<dnd:DragDropInfo sourceAggregation="items" 
							targetAggregation="items" 
							dropPosition="Between" 
							drop=".onReorderItems"/>
					</dragDropConfig>
				</List>
				<!-- ENCERRADOS -->
				<List items="{ path: 'detailView>/atividades', filters : [ { path : 'status', operator : 'EQ', value1 : 'A'} ] }" headerText="Encerrados"
					width="99%" noDataText="Vazio">
					<ObjectListItem title="{detailView>descricao}">
						<ObjectAttribute text="{path: 'detailView>idDev', formatter: '.formatter.getDev'}"></ObjectAttribute>
						<firstStatus>
							<ObjectStatus text="{path: 'detailView>status', formatter: '.formatter.formatStatusText'}"
								state="{path: 'detailView>status', formatter: '.formatter.formatStatusColor'}"></ObjectStatus>
						</firstStatus>
					</ObjectListItem>
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
					<dragDropConfig>
						<dnd:DragDropInfo 
							sourceAggregation="items"
							targetAggregation="items"
							dropPosition="Between" 
							drop=".onReorderItems"/>
					</dragDropConfig>
				</List>
			</HBox>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onSendEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:closeAction>
			<semantic:CloseAction id="closeColumn" press=".onCloseDetailPress"/>
		</semantic:closeAction>
		<semantic:fullScreenAction>
			<semantic:FullScreenAction id="enterFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}" press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}" press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>
	</semantic:SemanticPage>
</mvc:View>